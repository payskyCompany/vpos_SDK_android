<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_8sdp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingEnd="@dimen/_8sdp"
    android:paddingStart="@dimen/_8sdp">

    <LinearLayout
        android:padding="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_alpha_bg_with_redius"
        android:orientation="vertical">


        <!--<View-->
        <!--android:layout_margin="@dimen/_3sdp"-->
        <!--android:background="@color/white"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"/>-->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/colorGreyEditText"
                android:id="@+id/date_transaction_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_weight="1"
                android:gravity="start"
                android:textSize="@dimen/_14ssp"
                android:text="17 March"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/colorGreyEditText"
                tools:text="sdfsdfsdfsdf"
                android:id="@+id/TotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:text="" />

        </LinearLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/seprator_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/colorGreyEditText"
                android:id="@+id/trxnTypeTitle"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_weight="1"
                android:padding="@dimen/_3sdp"
                android:text="@string/TrxnType" />

            <TextView
                android:textColor="@color/colorGreyEditText"

                android:id="@+id/timeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="@string/Time" />

            <TextView
                android:textColor="@color/colorGreyEditText"

                android:id="@+id/refTitle"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_weight="1"
                android:padding="@dimen/_3sdp"
                android:text="@string/Ref" />

            <TextView
                android:textColor="@color/colorGreyEditText"
                android:id="@+id/amountTitle"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_weight="1"
                android:padding="@dimen/_3sdp"
                android:text="@string/upg_general_Amountdot" />

        </LinearLayout>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subtrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>