<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp">

    <LinearLayout
        android:id="@+id/ll_pay_by_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/edit_text_drawable2"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/card"
            app:tint="#1777B9" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pay By Card"
            android:textAlignment="viewStart"
            android:textColor="#747373"
            android:textSize="@dimen/_16ssp" />


        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/arrow_celender"
            android:tint="@color/colorGreyEditText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pay_by_link"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/edit_text_drawable2"

        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/paylink_icon"
            app:tint="#1777B9" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pay By PayLink"
            android:textAlignment="viewStart"
            android:textColor="#747373"
            android:textSize="@dimen/_16ssp" />

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/arrow_celender"
            android:tint="@color/colorGreyEditText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pay_by_qr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/edit_text_drawable2"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/TransactionsImage"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:srcCompat="@drawable/transaction_icon"
            app:tint="#1777B9" />

        <TextView
            android:id="@+id/TransactionsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="View Transactions"
            android:textAlignment="viewStart"
            android:textColor="@color/colorGreyEditText"
            android:textSize="@dimen/_16ssp" />

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/arrow_celender"
            android:tint="@color/colorGreyEditText" />
    </LinearLayout>


</LinearLayout>