<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    app:cardBackgroundColor="@color/alfawhite"
    app:cardElevation="1dp"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:padding="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/upg_general_OrderID"
                    android:textColor="@color/fieldsNameColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Order_ID"
                    android:textColor="@color/tintColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="asdasda"
                    android:textAlignment="textEnd" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/UPGTID"

                    android:textColor="@color/fieldsNameColor"

                    android:textStyle="bold" />

                <TextView

                    android:textColor="@color/tintColor"
                    android:id="@+id/terminal_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="asdasda"
                    android:textAlignment="textEnd" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/seprator_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/upg_general_Status"

                    android:textColor="@color/fieldsNameColor"
                    android:textStyle="bold" />

                <TextView


                    android:id="@+id/Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tintColor"
                    android:text="asdasda"
                    android:textAlignment="textStart" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/upg_general_Date"

                    android:textColor="@color/fieldsNameColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Date"
                    android:textColor="@color/tintColor"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textEnd" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/seprator_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/MerchantReferanceLL"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/upg_paylink_history_Merchant_Reference_label"

                    android:textColor="@color/fieldsNameColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Ref"

                    android:textColor="@color/tintColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="asdasda"
                    android:textAlignment="textEnd" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/upg_general_Amount"

                    android:textColor="@color/fieldsNameColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amount"

                    android:textColor="@color/tintColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="asdasda"
                    android:textAlignment="textEnd" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seprator_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/numberpaymentLL"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="@dimen/_3sdp">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/upg_paylink_item_numberpayment_label"

                        android:textColor="@color/fieldsNameColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/numberpayment"
                        android:textColor="@color/tintColor"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdasda"
                        android:textAlignment="textEnd" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/MaxNumberOfPaymentLL"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/seprator_color" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="@dimen/_3sdp">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/upg_paylink_item_number_payment_name_label"

                        android:textColor="@color/fieldsNameColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/MaxNumberOfPayment"
                        android:textColor="@color/tintColor"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdasda"
                        android:textAlignment="textEnd" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/FileLL"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/seprator_color" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="@dimen/_3sdp">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/upg_general_file"

                        android:textColor="@color/fieldsNameColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/FileName"

                        android:textColor="@color/tintColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdasda"
                        android:textAlignment="textEnd" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>